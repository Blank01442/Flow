# Mathematical operations
let radius = 5.0
let area = 3.14159 * radius * radius
let circumference = 2 * 3.14159 * radius
print "Circle with radius", radius
print "Area:", area
print "Circumference:", circumference

# Functions
func factorial(n) {
    if n <= 1 {
        return 1
    }
    return n * factorial(n - 1)
}

let fact5 = factorial(5)
print "Factorial of 5:", fact5

# Control flow
let scores = [85, 92, 78, 96, 88]
let highest = max(scores)
let lowest = min(scores)
let average = sum(scores) / len(scores)

print "Test scores:", scores
print "Highest score:", highest
print "Lowest score:", lowest
print "Average score:", average

# Conditional logic
if average >= 90 {
    print "Excellent class performance!"
} else if average >= 80 {
    print "Good class performance!"
} else if average >= 70 {
    print "Fair class performance."
} else {
    print "Needs improvement."
}

