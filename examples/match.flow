# Match Statement Example
print "Match Statement Demo"

# Simple match statement
let value = 2

match value {
    case 1:
        print "Value is one"
    case 2:
        print "Value is two"
    case 3:
        print "Value is three"
    default:
        print "Value is something else"
}

# Match with string values
let status = "success"

match status {
    case "pending":
        print "Request is pending"
    case "success":
        print "Request succeeded"
    case "error":
        print "Request failed"
    default:
        print "Unknown status"
}

# Match with computed values
let x = 5
let y = 3
let result = x + y

match result {
    case 8:
        print "The sum is 8"
    case 9:
        print "The sum is 9"
    default:
        print "The sum is", result
}